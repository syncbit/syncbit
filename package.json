{
    "name": "synctune",
    "version": "1.0.0",
    "scripts": {
        "rm-services:dev": "docker-compose -f docker-compose-dev.yml rm -f reverse-proxy signalling-server client redis",
        "rm-services:dev--reverse-proxy": "docker-compose -f docker-compose-dev.yml rm -f reverse-proxy",
        "rm-services:dev--signalling-server": "docker-compose -f docker-compose-dev.yml rm -f signalling-server",
        "rm-services:dev--client": "docker-compose -f docker-compose-dev.yml rm -f client",
        "rm-services:dev--redis": "docker-compose -f docker-compose-dev.yml rm -f redis",
        "start:dev": "docker-compose -f docker-compose-dev.yml up --build",
        "restart:dev": "docker-compose -f docker-compose-dev.yml restart reverse-proxy signalling-server client redis",
        "restart:dev--reverse-proxy": "docker-compose -f docker-compose-dev.yml restart reverse-proxy",
        "restart:dev--signalling-server": "docker-compose -f docker-compose-dev.yml restart signalling-server",
        "restart:dev--client": "docker-compose -f docker-compose-dev.yml restart client",
        "restart:dev--redis": "docker-compose -f docker-compose-dev.yml restart redis",
        "stop:dev": "docker-compose -f docker-compose-dev.yml down",

        "rm-services:prod": "docker-compose -f docker-compose.yml rm -f reverse-proxy signalling-server client",
        "rm-services:prod--reverse-proxy": "docker-compose -f docker-compose.yml rm -f reverse-proxy",
        "rm-services:prod--signalling-server": "docker-compose -f docker-compose.yml rm -f signalling-server",
        "rm-services:prod--client": "docker-compose -f docker-compose.yml rm -f client",
        "start:prod": "docker-compose -f docker-compose.yml up --build",
        "restart:prod": "docker-compose -f docker-compose.yml restart reverse-proxy signalling-server client",
        "restart:prod--reverse-proxy": "docker-compose -f docker-compose.yml restart reverse-proxy",
        "restart:prod--signalling-server": "docker-compose -f docker-compose.yml restart signalling-server",
        "restart:prod--client": "docker-compose -f docker-compose.yml restart client",
        "stop:prod": "docker-compose -f docker-compose.yml down",

        "shell:reverse-proxy": "docker exec -it synctune_reverse_proxy sh",
        "shell:signalling-server": "docker exec -it synctune_signalling_server sh",
        "shell:client": "docker exec -it synctune_client sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/synctune/synctune.git"
    }
}